<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">new article</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="post[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="post[description]" placeholder="your text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>