<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center;">Editiere einen Moment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="post[image]" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="post[description]"><%- blog.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>